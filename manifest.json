{
  "manifest_version": 2,
  "name": "Web Sketch Injector",
  "description": "An extension for web developers that allow you to display a sketch above a website",
  "version": "0.1",
  "permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "browser_action": {
    "default_icon" : "img/icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": ["content-script.js"]
    }
  ],
  "icons": {
    "128" : "img/icon.png"
  }
}